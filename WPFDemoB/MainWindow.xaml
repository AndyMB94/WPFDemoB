<Window x:Class="WPFDemoB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemoB"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Background="LightBlue">
        <StackPanel HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Width="250">

            <!-- Título -->
            <TextBlock Text="Iniciar Sesión" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,20"/>

            <!-- Usuario -->
            <TextBlock Text="Usuario:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsuario" 
                    Height="30" 
                    Margin="0,0,0,15"/>

            <!-- Contraseña -->
            <TextBlock Text="Contraseña:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" 
                        Height="30" 
                        Margin="0,0,0,20"/>

            <!-- Botón -->
            <Button x:Name="btnLogin" 
                   Content="Ingresar" 
                   Height="35" 
                   Background="DodgerBlue" 
                   Foreground="White" 
                   FontWeight="Bold"
                   Click="btnLogin_Click"/>

        </StackPanel>
    </Grid>
</Window>