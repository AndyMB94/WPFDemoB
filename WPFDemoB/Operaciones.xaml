<Window x:Class="WPFDemoB.Operaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemoB"
        mc:Ignorable="d"
        Title="Registro de Ingresos" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Background="LightGray">
        <!-- Barra superior -->
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Background="DarkGreen" Height="50">
                <TextBlock Text="REGISTRO DE INGRESOS" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Margin="10"/>
            </StackPanel>

            <!-- Contenido principal -->
            <ScrollViewer>
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Top"
                           Width="600"
                           Margin="20">

                    <!-- Formulario de ingreso -->
                    <GroupBox Header="DATOS DEL INGRESO" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Margin="0,10,0,20"
                             Padding="20"
                             Background="White">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Tipo Documento -->
                            <TextBlock Text="Tipo Documento:" 
                                      Grid.Row="0" Grid.Column="0"
                                      VerticalAlignment="Center" 
                                      Margin="0,10"/>
                            <ComboBox x:Name="cmbTipoDocumento" 
                                     Grid.Row="0" Grid.Column="1"
                                     Height="30" 
                                     Margin="10,10,0,10">
                                <ComboBoxItem Content="DNI"/>
                                <ComboBoxItem Content="Carnet de Extranjería"/>
                                <ComboBoxItem Content="Pasaporte"/>
                                <ComboBoxItem Content="Licencia de Conducir"/>
                            </ComboBox>

                            <!-- Número Documento -->
                            <TextBlock Text="Número Documento:" 
                                      Grid.Row="1" Grid.Column="0"
                                      VerticalAlignment="Center" 
                                      Margin="0,10"/>
                            <TextBox x:Name="txtNumeroDocumento" 
                                    Grid.Row="1" Grid.Column="1"
                                    Height="30" 
                                    Margin="10,10,0,10"/>

                            <!-- Placa -->
                            <TextBlock Text="Placa:" 
                                      Grid.Row="2" Grid.Column="0"
                                      VerticalAlignment="Center" 
                                      Margin="0,10"/>
                            <TextBox x:Name="txtPlaca" 
                                    Grid.Row="2" Grid.Column="1"
                                    Height="30" 
                                    Margin="10,10,0,10"/>

                            <!-- Turno -->
                            <TextBlock Text="Turno:" 
                                      Grid.Row="3" Grid.Column="0"
                                      VerticalAlignment="Center" 
                                      Margin="0,10"/>
                            <ComboBox x:Name="cmbTurno" 
                                     Grid.Row="3" Grid.Column="1"
                                     Height="30" 
                                     Margin="10,10,0,10">
                                <ComboBoxItem Content="Mañana"/>
                                <ComboBoxItem Content="Tarde"/>
                                <ComboBoxItem Content="Noche"/>
                            </ComboBox>

                            <!-- Nombre Conductor -->
                            <TextBlock Text="Nombre Conductor:" 
                                      Grid.Row="4" Grid.Column="0"
                                      VerticalAlignment="Center" 
                                      Margin="0,10"/>
                            <TextBox x:Name="txtNombreConductor" 
                                    Grid.Row="4" Grid.Column="1"
                                    Height="30" 
                                    Margin="10,10,0,10"/>

                            <!-- Nombre Cliente -->
                            <TextBlock Text="Nombre Cliente:" 
                                      Grid.Row="5" Grid.Column="0"
                                      VerticalAlignment="Center" 
                                      Margin="0,10"/>
                            <TextBox x:Name="txtNombreCliente" 
                                    Grid.Row="5" Grid.Column="1"
                                    Height="30" 
                                    Margin="10,10,0,10"/>

                            <!-- Fecha y Hora -->
                            <TextBlock Text="Fecha y Hora:" 
                                      Grid.Row="6" Grid.Column="0"
                                      VerticalAlignment="Center" 
                                      Margin="0,10"/>
                            <DatePicker x:Name="dpFechaHora" 
                                       Grid.Row="6" Grid.Column="1"
                                       Height="30" 
                                       Margin="10,10,0,10"/>

                            <!-- Peso de Ingreso -->
                            <TextBlock Text="Peso de Ingreso (Kg):" 
                                      Grid.Row="7" Grid.Column="0"
                                      VerticalAlignment="Center" 
                                      Margin="0,10"/>
                            <TextBox x:Name="txtPesoIngreso" 
                                    Grid.Row="7" Grid.Column="1"
                                    Height="30" 
                                    Margin="10,10,0,10"/>

                            <!-- Botones -->
                            <StackPanel Grid.Row="8" Grid.ColumnSpan="2" 
                                       Orientation="Horizontal" 
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0">

                                <Button x:Name="btnGuardar" 
                                       Content="Guardar Ingreso" 
                                       Height="40" 
                                       Width="150"
                                       Background="Green" 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       Margin="10,0"
                                       Click="btnGuardar_Click"/>

                                <Button x:Name="btnLimpiar" 
                                       Content="Limpiar Campos" 
                                       Height="40" 
                                       Width="150"
                                       Background="Orange" 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       Margin="10,0"
                                       Click="btnLimpiar_Click"/>

                                <Button x:Name="btnVolver" 
                                       Content="Volver al Menú" 
                                       Height="40" 
                                       Width="150"
                                       Background="Gray" 
                                       Foreground="White" 
                                       FontWeight="Bold"
                                       Margin="10,0"
                                       Click="btnVolver_Click"/>
                            </StackPanel>

                        </Grid>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>